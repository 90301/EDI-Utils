<Window x:Class="EDI_Utilities.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EDI_Utilities"
        mc:Ignorable="d"
        Title="EDI-Utilities [by Josh Benton]" Height="350" Width="520">
    <TabControl x:Name="tabControl" Margin="10,10,14,7" RenderTransformOrigin="0.496,0.513">
        <TabItem Header="Source (flat)">
            <Grid Background="#FFE5E5E5">
                <TextBox x:Name="sourceTextbox" Margin="10,10,10,40" Text="TextBox" MaxLength="2147483647" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" AutoWordSelection="True" AcceptsReturn="True"/>
                <Button x:Name="button" Content="Convert to delimited" Margin="0,0,10,10" Click="button_Click" HorizontalAlignment="Right" Width="125" Height="23" VerticalAlignment="Bottom"/>
                <TextBox x:Name="delimiterTextbox" HorizontalAlignment="Left" Margin="80,0,0,7" TextWrapping="Wrap" Text="|" Width="30" MaxLength="5" MaxLines="1" Height="23" VerticalAlignment="Bottom"/>
                <Label x:Name="label" Content="Delimiter:" HorizontalAlignment="Left" Margin="10,0,0,7" Height="26" VerticalAlignment="Bottom"/>
            </Grid>
        </TabItem>
        <TabItem Header="Delimited">
            <Grid Background="#FFE5E5E5">
                <TextBox x:Name="delimitedTextbox" Margin="10" Text="TextBox" AcceptsReturn="True" AcceptsTab="True" AutoWordSelection="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
            </Grid>
        </TabItem>
        <TabItem x:Name="field_finder" Header="field finder"/>
        <TabItem HeaderStringFormat="" Header="Rich Text"/>
    </TabControl>
</Window>
